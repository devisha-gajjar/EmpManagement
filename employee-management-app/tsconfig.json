{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",  // Set target to modern JS
    "module": "ESNext",  // Use ESNext modules for compatibility with `import.meta.url`
    "moduleResolution": "node",  // Resolve modules as Node.js does
    "esModuleInterop": true,  // Enable interoperability with CommonJS
    "types": ["node"],  // Include Node.js types for globals like `__dirname`
    "lib": ["ESNext", "dom"]  // Add DOM types for browser globals
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
